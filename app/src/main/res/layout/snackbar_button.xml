<?xml version="1.0" encoding="utf-8"?>
<!--
Used to create an extra button in our snackbar popup messages.
Though most properties including layout params and colors are overridden at runtime.
They are just copied from the standard snackbar action button to make sure they both look alike.
-->
<Button
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbar_action"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_gravity="center_vertical|end"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:textColor="?attr/colorAccent"
    style="?attr/borderlessButtonStyle"/>
