<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:showIn="@layout/activity_waypoints">

        <Button
            android:id="@+id/toggle_fave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toggle_button_horizontal_margin"
            android:layout_marginTop="@dimen/toggle_fave_vertical_margin"
            android:contentDescription="@string/toggle_fave_descr"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Theme.DiscoverChristchurch.TranslucentButton"
            tools:icon="@drawable/ic_outline_bookmark_add_translucent_24"
            tools:ignore="TouchTargetSizeCheck"
            tools:visibility="visible" />

        <Button
            android:id="@+id/toggle_markers_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toggle_button_horizontal_margin"
            android:layout_marginBottom="@dimen/toggle_polyline_vertical_margin"
            android:contentDescription="@string/toggle_markers_descr"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:icon="@drawable/ic_outline_maps_ugc_translucent_24"
            style="@style/Theme.DiscoverChristchurch.TranslucentButton"
            tools:ignore="TouchTargetSizeCheck"
            tools:visibility="visible" />

        <Button
            android:id="@+id/toggle_polyline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toggle_button_horizontal_margin"
            android:layout_marginBottom="@dimen/toggle_polyline_vertical_margin"
            android:contentDescription="@string/toggle_polyline_descr"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:icon="@drawable/ic_outline_polyline_translucent_24"
            style="@style/Theme.DiscoverChristchurch.TranslucentButton"
            tools:ignore="TouchTargetSizeCheck"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>